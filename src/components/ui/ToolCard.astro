---
// src/components/ui/ToolCard.astro
import { Icon } from "astro-icon/components";
import type { Tool } from "../../data/tools";

interface Props {
    tool: Tool;
}

const { tool } = Astro.props;
---

<div
    class="flex flex-col items-center p-5 rounded-2xl border border-gray-100 hover:border-gray-200 hover:shadow-md transition-all"
>
    <div
        class="w-12 h-12 rounded-xl flex items-center justify-center mb-3"
        style={`background-color: ${tool.bgColor}`}
    >
        <Icon name={tool.icon} class="w-6 h-6 text-white" />
    </div>
    <p class="text-xs font-medium text-gray-900">{tool.name}</p>
</div>
