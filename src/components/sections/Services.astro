---
// src/components/sections/Services.astro
import ServiceCard from "../ui/ServiceCard.astro";
import { services } from "../../data/services";
---

<section id="services" class="py-24 bg-gray-100">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-16">
            <p
                class="text-sm font-semibold uppercase tracking-wider mb-4 text-primary-blue"
            >
                Services
            </p>
            <h2
                class="text-3xl lg:text-4xl font-semibold tracking-tight text-gray-900 mb-4"
            >
                How I can help you grow
            </h2>
            <p class="text-base text-gray-600 max-w-2xl mx-auto">
                Comprehensive social media marketing services tailored to your
                business needs and goals.
            </p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {services.map((service) => <ServiceCard service={service} />)}
        </div>
    </div>
</section>
